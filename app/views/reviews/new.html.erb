<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>


<%= simple_form_for [@restaurant, @review] do |f| %>
  <% if @review.errors.any? %>
    <div class="errors-container">
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>

<% end %>
